generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DeviceType {
  WATER_SENSOR
}

model Device {
  id                     String     @id @default(uuid())
  name                   String     @unique @db.VarChar(12)
  label                  String     @db.VarChar(50)
  type                   DeviceType @default(WATER_SENSOR)
  thingsBoardId          String     @unique @db.VarChar(36)
  thingsBoardAccessToken String     @unique @db.VarChar(20)
  longitude              Float      @db.Real
  latitude               Float      @db.Real
  createdAt              DateTime   @default(now())

  @@map("devices")
}

model ThingsBoardAuth {
  id           String @id @default(uuid())
  token        String
  refreshToken String

  @@map("things_board_auth")
}
